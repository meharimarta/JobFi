<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    android:layout_margin="8dp">
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<androidx.cardview.widget.CardView
			android:id="@+id/image_wrapper"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:cardCornerRadius="10dp"
			app:cardElevation="2dp">
		
		<ImageView
			android:layout_width="match_parent"
			android:layout_height="200dp"
			android:maxHeight="200dp"
			android:src="@drawable/back"
			android:scaleType="fitXY"
			android:id="@+id/company_logo"/>
      </androidx.cardview.widget.CardView>
	
		<LinearLayout
			android:layout_below="@+id/image_wrapper"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="16dp">
        <TextView
			android:id="@+id/company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ethiopian Public Health Institute"
			android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
			android:id="@+id/field_of_study"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IT, Computer Science and..."
			android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textSize="14sp" />

        <TextView
			android:id="@+id/job_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:text="Job Position: Data Science Expert"
            android:textSize="16sp" />

        <TextView
			android:id="@+id/salaray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salary: / month"
			android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textSize="14sp" />

        <TextView
			android:id="@+id/dead_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deadline: 2024-08-18"
			android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textSize="14sp" />
	
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<Button
				android:id="@+id/see_more_btn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="See more"/>
			<Button
				android:id="@+id/see_apply_btn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dp"
				android:text="Apply"/>
		</LinearLayout>
    </LinearLayout>
	</RelativeLayout>
</androidx.cardview.widget.CardView>
